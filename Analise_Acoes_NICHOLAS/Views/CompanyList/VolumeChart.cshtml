
@{
    ViewData["Title"] = "Charts";
}

<h2>@ViewBag.ChartType</h2>

<!DOCTYPE HTML>
<html>
<head>
    <script>
        window.onload = function () {

            var chart = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                zoomEnabled: true,
                title: {
                    text: "@ViewBag.symbol"
                },
                axisY: {
                    includeZero: false
                },
                data: [
                    {
                        type: "column",
                        dataPoints: @Html.Raw(ViewBag.DataPoints)}] 
            });
            chart.render();

        }

    </script>
   
    <script type="text/javascript" src="~/js/canvasjs-2.0-beta1/canvasjs.min.js"></script>
</head>
<body>
    <div id="form">
        <p>
            <form>
                <input type="hidden" name="Symbol" value="@ViewBag.Symbol" />
                Inicio: <input type="date" name="start" value="2017-08-01">
                Fim: <input type="date" name="end" value="@ViewBag.Date">

                <input type="submit" asp-action="Charts" asp-route-Symbol="@ViewBag.Symbol" />
            </form>                
        </p>
    </div>
    <div id="chartContainer" style="height: 370px; width: 100%;">
    </div>
</body>
</html>